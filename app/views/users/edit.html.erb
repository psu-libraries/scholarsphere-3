<% content_for :local_js do %>
// initialize popover helpers
$("a[rel=popover]").popover({ html: true });
<% end %>

<h1>Edit Profile</h1>
<div class="row">
  <div class="span53">
    <div class="well">
      <%= render partial: 'profile_form' %>
    </div><!-- /well-->

    <div class="well">
      <%= render partial: 'dashboard/_index_partials/proxy_rights' %>
    </div><!-- /well-->
  </div><!-- /span -->

  <div class="span45 offset1">
    <div class="well">
      <h3><i class="icon-user"></i> Directory Info (LDAP) <i class="icon-external-link"></i> <%= link_to 'Edit Directory Info', 'http://www.psu.edu/directory/#update', class: 'btn btn-mini btn-primary' %></h3>
      <dl id="user_info">
      <%= render partial: 'user_info', locals: {user: @user} %>
      </dl>
      <hr />

      <h3><i class="icon-group"></i> User Managed Groups Info (UMG) <i class="icon-external-link"></i> <%= link_to 'Manage UMG', 'http://umg.its.psu.edu/', class: 'btn btn-mini btn-primary' %> </h3>
      <% if @groups %>
        <% @groups.each do |g| %>
          <i class="icon-caret-right"></i> <%= g %><br />
        <% end %>
      <% end %>
    </div>
  </div> <!-- /span -->
</div> <!-- /row -->

